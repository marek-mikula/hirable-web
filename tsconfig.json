{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node",
    "paths": {
      "~": [
        "."
      ],
      "~/*": [
        "./*"
      ]
    },
    "importsNotUsedAsValues": "error",
    "module": "ESNext"
  }
}
